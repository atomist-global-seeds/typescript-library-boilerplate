{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "es2015",
    "newLine": "LF",
    "lib": ["es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ]
}
